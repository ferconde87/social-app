<% provide(:title, "Log in") %>
<h1 class="text-center my-5 text-primary">Log in</h1>
<div class="row">
  <div class="col-md-4 mx-auto text-primary mb-5">
  <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
    <%= f.label :email, class: "form-label mb-1" %>
    <%= f.email_field :email, class: 'form-control mb-3' %>
    <%= f.label :password, class: "form-label mb-1" %>
    <%= link_to "(forgot password)", new_password_reset_path %>
    <%= f.password_field :password, class: 'form-control mb-2' %>
    <div class="form-check mb-4">
      <%= f.check_box :remember_me, class: "form-check-input" %>
      <%= f.label :remember_me, class: "form-check-label" %>
    </div>

    <%= f.submit "Log in", class: "btn btn-primary px-4 mb-2" %>
  <% end %>
  <p>Not signed yet? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>
