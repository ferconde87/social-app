<% provide(:title, "Log in") %>
<h1 class="text-center my-5 text-primary">Log in</h1>
<div class="row">
  <div class="col-md-4 mx-auto text-primary">
  <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
    <%= f.label :email, class: "form-label mb-1" %>
    <%= f.email_field :email, class: 'form-control mb-3' %>
    <%= f.label :password, class: "form-label mb-1" %>
    <%= f.password_field :password, class: 'form-control mb-4' %>
    <%= f.submit "Log in", class: "btn btn-primary px-4 mb-2" %>
  <% end %>
  <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>
