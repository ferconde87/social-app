
<h1 class="text-center my-4 text-primary">Contact Us</h1>
<div class="row">
  <div class="col-md-4 mx-auto text-primary">
    <%= form_with do |f| %>
      <%= f.label :name, class: "form-label mb-1" %>
      <%= f.text_field :name, class: "form-control mb-3", :required => true %>
      <%= f.label :email, class: "form-label mb-1" %>
      <%= f.email_field :email, class: "form-control mb-3", :required => true %>
      <%= f.label :subject, class: "form-label mb-1" %>
      <%= f.text_field :subject, class: "form-control mb-3", placeholder: 'I have a question', :required => true %>
      <div class="form-floating ">
        <%= f.text_area :content, id: 'post-form', placeholder: 'What would you like to tell us?',   class: "form-control mb-2", style: "height: 100px", :required => true %>    
        <%= f.label 'What would you like to tell us?', for: 'post-form', class: "text-secondary form-label", :required => true %>
      </div>
      <%= f.submit "Submit", class: "btn btn-primary px-5 mb-5 w-100" %>
    <% end %> 
  </div>
</div>
