<% provide(:title, @title) %>
<div class="container my-5 mx-auto">
  <%= render 'show_user_info' %>
  
  <div class="col-md-8 m-auto mt-5">
      <ul>
        <h3 class="text-secondary"><%= @title %> </h3>
      </ul>
      <% if @users.any? %>
        <ul class="text-center">
          <div class="digg-pagination mb-3">
            <%= will_paginate %>
          </div>
          <div class="user_avatars mx-auto">
            <% @users.each do |user| %>
              <%= link_to gravatar_for(user, size: 30), user %>
            <% end %>
          </div>
        </ul>
        <ul class="users follow">
          <%= render @users %>
        </ul>
        <ul>
          <div class="digg-pagination">
            <%= will_paginate %>
          </div>
        </ul>
      <% end %>
  </div>
</div>
