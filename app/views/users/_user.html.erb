<li class="user-list list-group-item list-group-item-light my-2 border d-flex align-items-center">
  <%= gravatar_for user, size: 50 %>
  <%= link_to user.name, user, class: "link-user px-4 text-primary stretched-link" %>
  <% if current_user.admin? && !current_user?(user) %>
    <%= link_to "Delete",  user, method: :delete, 
      data: { confirm: "Are you sure you want to delete the user?" }, 
      class: 'btn btn-danger px-4 position-absolute end-0 me-4 btn-delete' %>
  <% end %>
</li>
