<% provide(:title, "Forgot password") %>
<h1 class="text-center my-5 text-primary">Forgot password</h1>
<div class="row">
  <div class="col-md-4 mx-auto text-primary mb-5">
    <%= form_with(url: password_resets_path, scope: :password_reset, local: true) do |f| %>
      <%= f.label :email, class: "form-label mb-1" %>
      <%= f.email_field :email, class: 'form-control mb-4' %>
      <%= f.submit "Submit", class: "btn btn-primary px-4 mb-2" %>
    <% end %>
  </div>
</div>
