var like = document.getElementById("like_<%=@object.class.model_name.singular%>_<%=@object.id%>");
var dislike = document.getElementById("dislike_<%=@object.class.model_name.singular%>_<%=@object.id%>");

if (like.classList.contains("bi-hand-thumbs-up")) {
  like.classList.replace("bi-hand-thumbs-up", "bi-hand-thumbs-up-fill")
  dislike.classList.replace("bi-hand-thumbs-down-fill", "bi-hand-thumbs-down")
} else {
  like.classList.replace("bi-hand-thumbs-up-fill", "bi-hand-thumbs-up")
}

like.textContent = " " + <%= @object.likes_count%>
dislike.textContent = " " + <%= @object.dislikes_count %>

