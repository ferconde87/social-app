var like = document.getElementById("like_<%=@post.id%>");
var dislike = document.getElementById("dislike_<%=@post.id%>");

if (like.classList.contains("bi-hand-thumbs-up")) {
  like.classList.replace("bi-hand-thumbs-up", "bi-hand-thumbs-up-fill")
  dislike.classList.replace("bi-hand-thumbs-down-fill", "bi-hand-thumbs-down")
} else {
  like.classList.replace("bi-hand-thumbs-up-fill", "bi-hand-thumbs-up")
}

like.textContent = " " + <%= @post.likes_count%>
dislike.textContent = " " + <%= @post.dislikes_count %>

