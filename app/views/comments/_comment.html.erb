<hr class="mb-2"> 
<div class="card-text col-md-11 align-self-center">
  <%= comment.user.name %>:
  <%= comment.content %>      
</div>
<% if current_user?(comment.user) %>
  <div class="card-text col-md-1 text-end">
    <%= link_to "", comment, method: :delete, data: { confirm: "Are you sure you want to delete the comment?" }, class: "btn btn-sm btn-close btn-danger" %>
  </div>
<% end %>
<div>
  <div class="d-flex align-items-end mb-2" >
    <small class="text-muted">
      <%= time_ago_in_words(comment.created_at) %> ago.
    </small>
    <%= render partial: 'likes/like', locals: { object: comment } %>
  </div>
</div>


