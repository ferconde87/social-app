<div class="card-text col-md-11 align-self-center mb-2">
  <%= comment.user.name %>:
  <%= comment.content %>      
  <div>
    <small class="text-muted">
      <%= time_ago_in_words(comment.created_at) %> ago.
    </small>
  </div>
</div>
<% if current_user?(comment.user) %>
  <div class="card-text col-md-1 text-end">
    <%= link_to "", comment, method: :delete, data: { confirm: "Are you sure you want to delete the comment?" }, class: "btn btn-sm btn-close btn-danger" %>
  </div>
<% end %>

