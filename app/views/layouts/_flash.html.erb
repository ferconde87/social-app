<% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %> alert-dismissible fade show d-flex align-items-center col-3 fixed-top ms-auto mt-3 me-3 flash">
    <%= message %>
  <button type="button" class="btn-sm btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>


