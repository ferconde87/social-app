<% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %> alert-dismissible fade show d-flex align-items-center col-md-4 col-sm-6 col-10 fixed-top ms-auto mt-3 mx-3 flash fade show shake text-wrap">
    <%= message %>
  <button type="button" class="btn-sm btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>


